<%= semantic_form_for @donor do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 20 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :email, :input_html => { :size => 20 } %>
    <%= f.input :cell, :input_html => { :size => 20 }%>
    <%= f.input :donated_date, :input_html => { :size => 20 } %>
    <%= f.input :subject, :input_html => { :class => 'autogrow', :rows => 20, :cols => 18, :maxlength => 10000  } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
